<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



        <TableLayout
            android:id="@+id/constrainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow android:layout_margin="5dp">


                <Button
                    android:id="@+id/Blue"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#0000ff" />
                <Button
                    android:id="@+id/Red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#7E130B"/>
                <Button
                    android:id="@+id/Green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#0F9714"/>
                <Button
                    android:id="@+id/Yellow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#FFEB3B" />
                <Button
                    android:id="@+id/Orange"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#FF9800" />

            </TableRow>

            <TableRow android:layout_margin="5dp">


                <Button
                    android:id="@+id/Purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#860DC2"/>
                <Button
                    android:id="@+id/Grey"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#59565A" />
                <Button
                    android:id="@+id/Black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#000000" />
                <Button
                    android:id="@+id/Brown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#332323"/>
                <Button
                    android:id="@+id/White"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button_pg"
                    android:backgroundTint="#F8F7F1" />

            </TableRow>

                <TextView
                    android:id="@+id/HeksaNumbers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:drawableTint="#B6ABAB"
                    />





        </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>